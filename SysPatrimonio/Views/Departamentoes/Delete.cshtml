@model SysPatrimonio.Models.DbDepartamento

@{
    ViewData["Title"] = "Deletar Departamento";
}

<h1>Deletar Departamento</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome Departamento
            @*@Html.DisplayNameFor(model => model.nomedepartamento)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomedepartamento)
        </dd>
        <dt class = "col-sm-2">
            Descrição Departamento
            @*@Html.DisplayNameFor(model => model.descricaodepartamento)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaodepartamento)
        </dd>
        <dt class = "col-sm-2">
            Id Local
            @*@Html.DisplayNameFor(model => model.idlocal)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idlocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
