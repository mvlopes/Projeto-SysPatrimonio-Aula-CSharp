@model IEnumerable<SysPatrimonio.Models.DbLocal>

@{
    ViewData["Title"] = "Local";
}

<h1>Local</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome Local
                @*@Html.DisplayNameFor(model => model.nomelocal)*@
            </th>
            <th>
                Descrição Local
                @*@Html.DisplayNameFor(model => model.descricaolocal)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaolocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
