@model IEnumerable<SysPatrimonio.Models.DbUsuario>

@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários</h1>

<p>
    @using (Html.BeginForm())
    {
        <text>Nome</text>@Html.DropDownList("nome", new SelectList(ViewBag.Nome))
        <text>Login</text>@Html.DropDownList("login", new SelectList(ViewBag.Login))
        <input type="submit" value="Procurar" />
    }
</p>


<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            @*@Html.DisplayNameFor(model => model.nome)*@
            </th>
            <th>
                Login
            @*@Html.DisplayNameFor(model => model.login)*@
            </th>
            <th>
                Senha
            @*@Html.DisplayNameFor(model => model.senha)*@
            </th>
            <th>
                Status
            @*@Html.DisplayNameFor(model => model.status)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar </a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
